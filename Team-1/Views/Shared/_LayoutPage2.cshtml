<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
  @*<img src="~/images/pic1.jpg" / width="1400" height="350">*@
    <link href="~/Mystyle/Mystyle.css" rel="stylesheet" />
   
</head>
<body>
    <img src="~/images/team1pic.jpg" / width="1500" height="400">
    @if (HttpContext.Current.Session["user"] != null)
    {

        <div>
            <ul>
                <li><a href="/Team1/Insert">Insert</a></li>
                <li><a href="/Team1/Logout">Logout</a></li>



            </ul>
            <table>
                <tr>
                    <td>
                        <h1 style="color:blue ; font:bold; font-family:Bernard MT Condensed">
                            Welcome @HttpContext.Current.Session["user"].ToString()
                        </h1>

                    </td>
                </tr>
            </table>
        </div>
        <div>
            @RenderBody()
        </div>
    }

    else
    {

        Response.Redirect("~/Team1/Login");
    }
</body>
</html>
